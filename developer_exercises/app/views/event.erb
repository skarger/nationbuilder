<style>
  div {
    padding: 3px;
  }
</style>

<h1>Edit Event</h1>

<form action="/event" method="post">
  <div>
    ID: <%= id %>
  </div>

  <div>
    <input type="hidden" name="event[id]" value="<%= id %>">
    <input type="hidden" name="event[status]" value="<%= status %>">
    <input type="hidden" name="event[start_time]" value="<%= start_time %>">
    <input type="hidden" name="event[end_time]" value="<%= end_time %>">
  </div>

  <div>
    Name: <input type="text" name="event[name]" value="<%= name %>">
  </div>

  <div>
    Name: <input type="text" name="event[intro]" value="<%= intro %>">
  </div>

  <div>
    <input type="submit">
  </div>
</form>
